<Application x:Class="AutobuskaStanica.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        
        
        <ResourceDictionary>

            <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="DarkBlue" />
            <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="Blue" />
            <SolidColorBrush x:Key="LightBackgroundColor" Color="LightBlue" />
            <SolidColorBrush x:Key="DarkBackgroundColor" Color="Black" />
            <FontFamily x:Key="ApplicationFont">Segoe UI</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Temu -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                              PrimaryColor="DeepPurple" 
                                              SecondaryColor="Lime" />
                
                <!-- Dodajte ispravan put do resursa -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
